<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="snackbarStyle">@style/Theme.Main.SnackBar.Primary</item>
        <item name="snackbarTextViewStyle">@style/Theme.Main.SnackBar.SnackBarText</item>
        <item name="snackbarButtonStyle">@style/Theme.Main.SnackBar.Button</item>
    </style>

    <style name="WhiteToolbarText" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:background">@color/darkestGrey</item>
    </style>

    <style name="GuidelinesColor">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:background">@color/darkestGrey</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTitleSecondary</item>
    </style>

    <style name="ToolbarTitlePrimary" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_condensed_bold</item>
    </style>

    <style name="ToolbarTitleSecondary" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

  <!--  <style name="BlurOverlayStyle">
        <item name="realtimeOverlayColor">#CC232323</item>
        <item name="realtimeBlurRadius">50dp</item>
    </style>-->

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">#4C4B4B</item>
    </style>

    <style name="ChatEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">#4C4B4B</item>
    </style>

    <style name="DialogBackground">
        <item name="android:backgroundTint">#222222</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">#4C4B4B</item>
    </style>

    <style name="CropView">
        <item name="android:background">#333333</item>
    </style>

    <style name="ChatBalloonLeftTail">
        <item name="tint">#4C4B4B</item>
    </style>

    <style name="ChatBalloonLeftDoc">
        <item name="android:backgroundTint">#4C4B4B</item>
    </style>

    <style name="ChatSendButton" parent="Theme.Button.IconOnly">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="InterestGroupBackground" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:backgroundTint">#4C4B4B</item>
    </style>

    <style name="ProjectDetailTextButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">#4C4B4B</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ChatBalloonLeft" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">#4C4B4B</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">#4C4B4B</item>
    </style>

    <style name="BackNavigationButton">
        <item name="iconTint">@color/white</item>
    </style>

    <style name="NonPrimaryFragmentStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="GenericMenuContainer">
        <item name="android:backgroundTint">#4C4B4B</item>
    </style>

    <style name="PrimaryScrim">
        <item name="android:background">#99000000</item>
    </style>

    <style name="ProjectImagePlaceholder">
        <item name="placeholderImage">@color/darkestGrey</item>
    </style>

    <style name="GenericMenuDismissBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#B34C4B4B</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="rippleColor">#6BE4E4E4</item>
        <item name="shapeAppearance">@style/GenericMenuDismissBtnShape</item>
    </style>

    <style name="GenericButton" parent="Theme.Button.IconOnly">
        <item name="iconTint">@color/purple_200</item>
        <item name="rippleColor">#33BB86FC</item>
    </style>

    <style name="NonPrimaryFragmentStyleImageView">
        <item name="android:background">@color/darkestGrey</item>
    </style>

    <style name="GenericMenuDismissBtnShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="PostMetaCardStyle">
        <item name="cardBackgroundColor">#222222</item>
        <item name="strokeColor">@null</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="PostCardStyle">
        <item name="cardBackgroundColor">#222222</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@null</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ThemeOverlay.WorkConnect.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="Theme.Main.SnackBar.Primary" parent="@style/Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="Theme.Main.SnackBar.Button" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="Theme.Main.SnackBar.SnackBarText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/darkestGrey</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_horiz_24</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Overflow Icon"</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorPrimary">@color/blue_500</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Theme.Button.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

    <style name="Theme.TabLayoutText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/title_font</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/blue_500</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="DialogStyleAlternative" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <!--        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/title_semi</item>
    </style>

    <style name="ChoiceChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIcon">@null</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">auto</item>
        <item name="tabTextAppearance">@style/Theme.TabLayoutText</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>
</resources>