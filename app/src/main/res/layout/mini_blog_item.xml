<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/blogRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/blogTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:text="The title of the Blog that is too long"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/blogAuthorImg"
                app:layout_constraintEnd_toStartOf="@+id/blogSaveBtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/blogAuthorImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/blogMiniContent"
                app:layout_constraintStart_toStartOf="@+id/blogTitle"
                app:layout_constraintTop_toBottomOf="@+id/blogTitle"
                app:placeholderImage="@color/grey"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/blogAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Jamid Deka"
                app:layout_constraintBottom_toBottomOf="@+id/blogAuthorImg"
                app:layout_constraintStart_toEndOf="@+id/blogAuthorImg"
                app:layout_constraintTop_toTopOf="@+id/blogAuthorImg" />

            <TextView
                android:id="@+id/blogMiniContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:maxLines="5"
                android:text="@string/large_text"
                app:layout_constraintBottom_toTopOf="@+id/likeBtn"
                app:layout_constraintEnd_toStartOf="@+id/blogImage"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/blogAuthorImg" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/blogImage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/blogMiniContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/blogMiniContent"
                app:layout_constraintTop_toTopOf="@+id/blogMiniContent"
                app:layout_constraintWidth_max="100dp"
                app:placeholderImage="@color/grey"
                app:viewAspectRatio="1.333" />

            <Button
                android:id="@+id/blogFollowBtn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="60dp"
                android:minHeight="36dp"
                android:text="Follow"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintBottom_toBottomOf="@+id/blogAuthorName"
                app:layout_constraintStart_toEndOf="@+id/blogAuthorName"
                app:layout_constraintTop_toTopOf="@+id/blogAuthorName" />

            <Button
                android:id="@+id/blogSaveBtn"
                style="@style/Theme.Button.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:icon="@drawable/bookmark_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/blogTitle"
                app:layout_constraintTop_toTopOf="@+id/blogTitle"
                tools:text=" " />

            <Button
                android:id="@+id/likeBtn"
                style="@style/Theme.Button.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:icon="@drawable/thumb_up_selector"
                app:iconSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/blogMetaText"
                app:layout_constraintStart_toStartOf="@+id/blogMiniContent"
                app:layout_constraintTop_toBottomOf="@+id/blogMiniContent" />

            <Button
                android:id="@+id/dislikeBtn"
                style="@style/Theme.Button.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:icon="@drawable/thumb_down_selector"
                app:iconSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/likeBtn"
                app:layout_constraintStart_toEndOf="@+id/likeBtn"
                app:layout_constraintTop_toTopOf="@+id/likeBtn" />

            <Button
                android:id="@+id/blogOptionBtn"
                style="@style/Theme.Button.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_more_horiz_24"
                app:iconTint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/dislikeBtn"
                app:layout_constraintEnd_toEndOf="@+id/blogSaveBtn"
                app:layout_constraintTop_toTopOf="@+id/dislikeBtn"
                tools:text=" " />

            <TextView
                android:id="@+id/blogMetaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:text="a few moments ago â— Gumoria Pathar"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/likeBtn"
                app:layout_constraintTop_toBottomOf="@+id/likeBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>