<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/projectDetailRoot"
        style="@style/NonPrimaryFragmentStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/projectDetailScroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/project_detail_content"
                layout="@layout/project_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/projectFragmentAppBar"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:backgroundTint="@color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/white"
                app:expandedTitleTextAppearance="@style/WhiteToolbarText"
                app:collapsedTitleTextAppearance="@style/TitleCollapsedPost"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|snapMargins"
                app:titleEnabled="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/projectDetailImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholderImage="@color/darkerGrey" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/projectDetailFragmentToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_round_arrow_back_24"
                    app:navigationIconTint="@color/white"
                    app:subtitleTextColor="@color/white"
                    app:titleCentered="true"
                    app:titleTextColor="@color/white" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>