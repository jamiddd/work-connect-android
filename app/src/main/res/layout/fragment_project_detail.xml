<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/projectDetailRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/NonPrimaryFragmentStyle">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/project_detail_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:placeholderImage="@color/darkerGrey" />

        <ScrollView
            android:id="@+id/projectDetialScroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="200dp">

            <include
                android:id="@+id/project_detail_content"
                layout="@layout/project_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

        <Button
            android:id="@+id/exitProjectDetail"
            style="@style/Theme.Button.IconOnly"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            app:icon="@drawable/ic_round_arrow_back_24"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#2F000000"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>