<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatLeftParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/otherUserPhoto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/leftMsgContainer"
            app:layout_constraintEnd_toStartOf="@+id/leftMsgContainer"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/leftMsgContainer"
            app:layout_constraintVertical_bias="0.98"
            app:placeholderImage="@drawable/ic_user"
            app:roundAsCircle="true"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/leftMsgContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otherUserPhoto"
            app:layout_constraintTop_toTopOf="parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imgMsgLeft"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:adjustViewBounds="true"
                android:maxWidth="250dp"
                android:maxHeight="150dp"
                app:actualImageScaleType="focusCrop"
                app:placeholderImage="@color/grey"
                app:roundedCornerRadius="12dp"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/leftTextContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/leftMsgTail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/otherUserMessage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/otherUserMessage"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/ic_chat_tail" />

                <TextView
                    android:id="@+id/otherUserMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/left_balloon"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="280dp"
                    tools:visibility="visible" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/otherUserMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="12:23 PM Sent by Jamid Deka"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@color/darkerGrey"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="gone" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/imgMsgUploadProgressLeft"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/blue_500"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/leftMsgContainer"
            app:layout_constraintEnd_toEndOf="@+id/leftMsgContainer"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="@+id/leftMsgContainer"
            app:layout_constraintTop_toTopOf="@+id/leftMsgContainer"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>