<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatLeftParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <View
            android:id="@+id/tailAnchor"
            android:layout_width="60dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="@+id/otherUserMessage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/otherUserPhoto"
            app:layout_constraintTop_toBottomOf="@+id/otherUserMessage" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/otherUserPhoto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/otherUserMessage"
            app:layout_constraintEnd_toStartOf="@+id/otherUserMessage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/otherUserMessage"
            app:layout_constraintVertical_bias="1.0"
            app:placeholderImage="@drawable/ic_user"
            app:roundAsCircle="true"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/otherUserMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="12:23 PM Sent by Jamid Deka"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/darkerGrey"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/otherUserMessage"
            app:layout_constraintTop_toBottomOf="@+id/otherUserMessage"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/leftMsgTail"
            style="@style/ChatBalloonLeftTail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-14"
            app:layout_constraintBottom_toBottomOf="@+id/tailAnchor"
            app:layout_constraintEnd_toEndOf="@+id/tailAnchor"
            app:layout_constraintHorizontal_bias="0.60"
            app:layout_constraintStart_toStartOf="@+id/tailAnchor"
            app:layout_constraintTop_toTopOf="@+id/otherUserMessage"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_chat_tail" />

        <TextView
            android:id="@+id/otherUserMessage"
            style="@style/ChatBalloonLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/left_balloon"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:translationY="2dp"
            app:layout_constraintBottom_toTopOf="@+id/otherUserMessageTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otherUserPhoto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_max="280dp"
            tools:text="Something is better than nothing, but we all know we can always do better. What about how we do things. There is somebody for everybody"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>