            <LinearLayout
                android:id="@+id/itemsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/adminImg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/adminInfo"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:placeholderImage="@drawable/ic_user"
                        app:roundAsCircle="true"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:id="@+id/adminInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:maxLines="1"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/timeText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/adminImg"
                        app:layout_constraintTop_toTopOf="@+id/adminImg"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="Jamid Deka" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_time_and_date_text"
                        android:textColor="#807E7E"
                        app:layout_constraintBottom_toBottomOf="@+id/adminImg"
                        app:layout_constraintEnd_toEndOf="@+id/adminInfo"
                        app:layout_constraintStart_toStartOf="@+id/adminInfo"
                        app:layout_constraintTop_toBottomOf="@+id/adminInfo" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imagesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/projectImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="1"
                        tools:listitem="@layout/image_layout">

                    </androidx.recyclerview.widget.RecyclerView>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/imagesTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/projectImages"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/projectImages"
                        app:layout_constraintTop_toTopOf="@+id/projectImages"
                        app:layout_constraintVertical_bias="1.0"
                        app:tabBackground="@drawable/image_tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabPaddingEnd="6dp"
                        app:tabPaddingStart="6dp"
                        app:tabRippleColor="@color/nearTransparent">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.tabs.TabLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/projectContentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="The content of the project that describes the project."
                    android:background="@null"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/sample_hint"
                    android:inputType="textMultiLine|text"
                    android:minHeight="100dp"
                    android:paddingStart="12dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="16dp"
                    android:textColorHint="#898A8A" />

                <View
                    android:id="@+id/divider18"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/tagsGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <TextView
                    android:id="@+id/projectLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:fontFamily="@font/title_semi"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:singleLine="true"
                    android:text="@string/add_location"
                    android:textColor="@color/blue_500"
                    app:drawableLeftCompat="@drawable/ic_baseline_add_location_alt_24"
                    app:drawableTint="@color/blue_500" />

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottomActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:cardElevation="20dp"
            app:cardMaxElevation="20dp"
            tools:visibility="gone">

            <!--<com.fivehundredpx.android.blur.BlurringView
                android:id="@+id/bottomCardBlur"
                android:layout_width="match_parent"
                android:layout_height="48dp" />-->

            <View
                android:id="@+id/divider12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/textFormatLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/bold"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_location_btn_desc"
                            app:icon="@drawable/ic_baseline_format_bold_24"
                            tools:ignore="RedundantDescriptionCheck" />

                        <Button
                            android:id="@+id/italic"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_tag_btn_desc"
                            app:icon="@drawable/ic_baseline_format_italic_24"
                            tools:ignore="RedundantDescriptionCheck" />

                        <Button
                            android:id="@+id/underline"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_link_btn_desc"
                            app:icon="@drawable/ic_baseline_format_underlined_24"
                            tools:ignore="RedundantDescriptionCheck" />

                        <Button
                            android:id="@+id/strikethrough"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_image_btn_desc"
                            app:icon="@drawable/ic_baseline_format_strikethrough_24"
                            tools:ignore="RedundantDescriptionCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/itemsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <Button
                            android:id="@+id/addProjectLocationBtn"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_location_btn_desc"
                            app:icon="@drawable/ic_baseline_add_location_alt_24"
                            tools:ignore="RedundantDescriptionCheck" />

                        <Button
                            android:id="@+id/addProjectTagBtn"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_tag_btn_desc"
                            app:icon="@drawable/ic_baseline_label_24"
                            tools:ignore="RedundantDescriptionCheck" />

                        <Button
                            android:id="@+id/addProjectLinkBtn"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_link_btn_desc"
                            app:icon="@drawable/ic_baseline_insert_link_24"
                            tools:ignore="RedundantDescriptionCheck" />

                        <Button
                            android:id="@+id/addImageBtn"
                            style="@style/GenericButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/add_image_btn_desc"
                            app:icon="@drawable/ic_baseline_add_photo_alternate_24"
                            tools:ignore="RedundantDescriptionCheck" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/createProjectFragmentAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/createProjectFragmentToolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="26dp"
                app:navigationIcon="@drawable/ic_round_arrow_back_24"
                app:titleCentered="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createProjectBtn"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:minWidth="40dp"
                    android:text="@string/create"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:cornerRadius="24dp" />

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>