<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/docMessageRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <View
            android:id="@+id/tailAnchor"
            android:layout_width="40dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/docMessage"
            app:layout_constraintTop_toBottomOf="@+id/docMessage" />

        <TextView
            android:id="@+id/currentUserDocMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="12:52 PM"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/darkerGrey"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/docMessage"
            app:layout_constraintTop_toBottomOf="@+id/docMessage" />

        <LinearLayout
            android:id="@+id/docMessage"
            style="@style/ChatBalloonLeftDoc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/chat_doc_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:translationY="2dp"
            app:layout_constraintBottom_toTopOf="@+id/currentUserDocMsgTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_document" />

            <TextView
                android:id="@+id/docMessageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Document"
                app:layout_constraintBottom_toTopOf="@+id/docMessageSize"
                app:layout_constraintEnd_toEndOf="@+id/docMessage"
                app:layout_constraintStart_toStartOf="@+id/docMessage"
                app:layout_constraintTop_toTopOf="@+id/docMessage"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/docMessageSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Size"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/docMessage"
                app:layout_constraintEnd_toEndOf="@+id/docMessage"
                app:layout_constraintStart_toStartOf="@+id/docMessage"
                app:layout_constraintTop_toBottomOf="@+id/docMessageName" />

            <ProgressBar
                android:id="@+id/docProgress"
                style="?android:attr/progressBarStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/downloadBtn"
                style="@style/Theme.Button.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                app:icon="@drawable/ic_round_arrow_downward_24"
                app:iconTint="@color/blue_500"
                app:strokeColor="@color/blue_500"
                app:strokeWidth="2dp"
                tools:visibility="visible" />

            <Button
                android:id="@+id/downloadTextButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/title_semi"
                android:minWidth="60dp"
                android:minHeight="36dp"
                android:text="Download"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/rightDocMsgTail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="19"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tailAnchor"
            app:layout_constraintEnd_toEndOf="@+id/tailAnchor"
            app:layout_constraintHorizontal_bias="0.991"
            app:layout_constraintStart_toStartOf="@+id/docMessage"
            app:layout_constraintTop_toTopOf="@+id/docMessage"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_chat_tail_right"
            app:tint="@color/grey" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>