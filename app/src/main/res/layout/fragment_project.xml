<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/projectFragmentRoot"
        style="@style/NonPrimaryFragmentStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProjectFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/projectRefresher"
            android:layout_width="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">

            <include
                android:id="@+id/projectContent"
                layout="@layout/project_fragment_content" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/projectData"
            style="@style/PostMetaCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:cardElevation="3dp">

            <include
                android:id="@+id/projectMetadata"
                layout="@layout/post_meta_layout" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/projectFragmentAppBar"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:backgroundTint="@color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleGravity="center_horizontal"
                app:contentScrim="@color/white"
                app:expandedTitleTextAppearance="@style/WhiteToolbarText"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|snapMargins"
                app:titleEnabled="false">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/projectImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:placeholderImage="@color/darkerGrey" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/projectFragmentToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_round_arrow_back_24"
                    app:navigationIconTint="@color/white"
                    app:subtitle="- Jamid Deka"
                    app:subtitleCentered="true"
                    app:subtitleTextColor="@color/white"
                    app:title="@string/app_name"
                    app:titleCentered="true"
                    app:titleTextColor="@color/white">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/projectAdminImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:placeholderImage="@drawable/ic_user"
                        app:roundAsCircle="true" />

                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!--<com.fivehundredpx.android.blur.BlurringView
            android:id="@+id/project_bottom_blur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:elevation="4dp" />-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>