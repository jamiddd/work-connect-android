<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <ScrollView
            android:id="@+id/projectScrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:paddingBottom="100dp">

            <include
                android:id="@+id/projectContent"
                layout="@layout/project_fragment_content" />

        </ScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/projectData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:behavior_hideable="false"
            app:behavior_peekHeight="0dp"
            app:cardElevation="20dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <include
                android:id="@+id/projectMetadata"
                layout="@layout/post_meta_layout" />

        </com.google.android.material.card.MaterialCardView>

        <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/project_bottom_blur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:elevation="21dp"
            android:fitsSystemWindows="true"
            app:realtimeBlurRadius="10dp"
            app:realtimeDownsampleFactor="5" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>