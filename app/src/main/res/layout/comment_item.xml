<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comment_user_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintEnd_toStartOf="@+id/comment_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/comment_user_name"
            app:placeholderImage="@drawable/ic_user"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toTopOf="@+id/comment_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Jamid Deka" />

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/large_text"
            android:textColor="#535353"
            app:layout_constraintBottom_toTopOf="@+id/comment_posted_at"
            app:layout_constraintEnd_toStartOf="@+id/reply"
            app:layout_constraintStart_toStartOf="@+id/comment_user_name"
            app:layout_constraintTop_toBottomOf="@+id/comment_user_name"
            tools:maxLines="2" />

        <TextView
            android:id="@+id/comment_posted_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="12:35 PM Thu"
            android:textColor="#717070"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/repliesRecycler"
            app:layout_constraintStart_toStartOf="@+id/comment_text"
            app:layout_constraintTop_toBottomOf="@+id/comment_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reply"
            style="@style/GenericButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="gone"
            app:icon="@drawable/ic_reply"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/like"
            app:layout_constraintEnd_toStartOf="@id/like"
            app:layout_constraintTop_toTopOf="@+id/like"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/like"
            style="@style/GenericButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:icon="@drawable/thumb_up_selector"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/comment_text"
            tools:visibility="visible" />

        <View
            android:id="@+id/threadLine"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/listDivider"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/comment_user_img"
            app:layout_constraintStart_toStartOf="@id/comment_user_img"
            app:layout_constraintTop_toBottomOf="@+id/comment_user_img" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/repliesRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment_posted_at" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>