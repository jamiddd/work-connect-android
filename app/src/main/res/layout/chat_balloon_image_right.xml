<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatImgRightParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <View
            android:id="@+id/tailAnchor"
            android:layout_width="40dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/currentUserImgMsg"
            app:layout_constraintTop_toBottomOf="@+id/currentUserImgMsg" />

        <TextView
            android:id="@+id/currentUserImgMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="12:52 PM"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/darkerGrey"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/currentUserImgMsg"
            app:layout_constraintTop_toBottomOf="@+id/currentUserImgMsg" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/currentUserImgMsg"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:translationY="2dp"
            app:layout_constraintBottom_toTopOf="@+id/currentUserImgMsgTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:placeholderImage="@color/grey"
            app:roundedCornerRadius="16dp" />

        <ImageView
            android:id="@+id/rightImgMsgTail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="19"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tailAnchor"
            app:layout_constraintEnd_toEndOf="@+id/tailAnchor"
            app:layout_constraintHorizontal_bias="0.991"
            app:layout_constraintStart_toStartOf="@+id/currentUserImgMsg"
            app:layout_constraintTop_toTopOf="@+id/currentUserImgMsg"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_chat_tail_right"
            app:tint="@color/grey" />

        <ProgressBar
            android:id="@+id/rightMsgProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/blue_500"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/downloadBtn"
            app:layout_constraintEnd_toEndOf="@+id/downloadBtn"
            app:layout_constraintStart_toStartOf="@+id/downloadBtn"
            app:layout_constraintTop_toTopOf="@+id/downloadBtn"
            tools:visibility="visible" />

        <Button
            android:id="@+id/downloadBtn"
            style="@style/Theme.Button.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:icon="@drawable/ic_round_arrow_downward_24"
            app:iconTint="@color/blue_500"
            app:layout_constraintBottom_toBottomOf="@+id/currentUserImgMsg"
            app:layout_constraintEnd_toEndOf="@+id/currentUserImgMsg"
            app:layout_constraintStart_toStartOf="@+id/currentUserImgMsg"
            app:layout_constraintTop_toTopOf="@+id/currentUserImgMsg"
            app:layout_constraintVertical_bias="0.45"
            app:strokeColor="@color/blue_500"
            app:strokeWidth="2dp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/downloadTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Download"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/downloadBtn"
            app:layout_constraintStart_toStartOf="@+id/downloadBtn"
            app:layout_constraintTop_toBottomOf="@+id/downloadBtn"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>