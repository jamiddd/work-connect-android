<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/genericDialogRoot"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:layout_height="wrap_content">

        <!--<com.fivehundredpx.android.blur.BlurringView
            android:id="@+id/dialogBackgroundBlur"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <LinearLayout
            android:id="@+id/dialogItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dialogImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_authentication" />

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text="Heading of the Dialog"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <ProgressBar
                android:id="@+id/dialogProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:indeterminate="true" />

            <TextView
                android:id="@+id/dialogMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Creating your project. Please wait ..." />

            <LinearLayout
                android:id="@+id/dialogActionBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                tools:visibility="gone">

                <Button
                    android:id="@+id/dialogCancelBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/title_semi"
                    android:text="Cancel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:cornerRadius="24dp"
                    tools:visibility="gone" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/dialogPositiveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/title_semi"
                    android:text="Accept"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:cornerRadius="24dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>