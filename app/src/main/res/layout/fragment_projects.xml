        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/postsAppBar"
            android:layout_width="match_parent"
            android:backgroundTint="@color/white"
            android:stateListAnimator="@animator/app_bar_elevation"
            android:layout_height="218dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                style="@style/CollapseToolbarStyle"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:toolbarId="@id/postsFragmentToolbar">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/postsFragmentToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginTop="26dp"
                    app:layout_collapseMode="pin"
                    app:title="@string/app_name"
                    app:titleCentered="true"
                    app:titleTextColor="@color/black" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createNewButton"
                    style="@style/Theme.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="2dp"
                    app:icon="@drawable/ic_baseline_add_24"
                    app:iconSize="26dp"
                    app:layout_collapseMode="pin"
                    app:rippleColor="@color/grey" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/accountImg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_collapseMode="pin"
                    app:placeholderImage="@drawable/ic_user"
                    app:roundAsCircle="true" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalTagsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:scrollbars="none"
                app:layout_collapseMode="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/homeInterestsGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:minHeight="45dp"
                    android:paddingEnd="8dp"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/first_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Random"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>


