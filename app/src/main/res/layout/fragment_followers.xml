<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/NonPrimaryFragmentStyle"
        tools:context=".profile.FollowersFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/followersRefresher"
            android:layout_width="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/followers_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                tools:listitem="@layout/user_horizontal_layout" />


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:backgroundTint="@color/white"
            android:stateListAnimator="@animator/app_bar_elevation"
            android:layout_height="wrap_content">

            <!--<com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/exploreHomeToolbar"
                android:layout_width="match_parent"
                android:layout_marginTop="26dp"
                android:layout_height="?actionBarSize"/>-->

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/followersMotionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutDescription="@xml/search_scene"
                app:applyMotionScene="true">

                <EditText
                    android:id="@+id/searchBarText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/grey_rounded_rect_edittext"
                    android:hint="Search ..."
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:minHeight="40dp"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/cancelSearchBtn"
                    android:layout_width="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:fontFamily="@font/roboto_medium"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="Cancel"/>

            </androidx.constraintlayout.motion.widget.MotionLayout>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>