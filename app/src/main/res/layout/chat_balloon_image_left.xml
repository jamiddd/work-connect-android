<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatImageLeftParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <View
            android:id="@+id/tailAnchor"
            android:layout_width="60dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="@+id/otherUserImageMessage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/otherUserImgMsgPhoto"
            app:layout_constraintTop_toBottomOf="@+id/otherUserImageMessage" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/otherUserImgMsgPhoto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/otherUserImageMessage"
            app:layout_constraintEnd_toStartOf="@+id/otherUserImageMessage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/otherUserImageMessage"
            app:layout_constraintVertical_bias="1.0"
            app:placeholderImage="@drawable/ic_user"
            app:roundAsCircle="true"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/otherUserImgMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="12:23 PM Sent by Jamid Deka"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/darkerGrey"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/otherUserImageMessage"
            app:layout_constraintTop_toBottomOf="@+id/otherUserImageMessage"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/leftImgMsgTail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-14"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tailAnchor"
            app:layout_constraintEnd_toEndOf="@+id/tailAnchor"
            app:layout_constraintHorizontal_bias="0.60"
            app:layout_constraintStart_toStartOf="@+id/tailAnchor"
            app:layout_constraintTop_toTopOf="@+id/otherUserImageMessage"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_chat_tail" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/otherUserImageMessage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:translationY="2dp"
            app:layout_constraintBottom_toTopOf="@+id/otherUserImgMessageTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/otherUserImgMsgPhoto"
            app:layout_constraintTop_toBottomOf="@+id/senderName"
            app:layout_constraintVertical_chainStyle="packed"
            app:placeholderImage="@color/grey"
            app:roundedCornerRadius="16dp"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/leftMsgProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/blue_500"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/downloadBtn"
            app:layout_constraintEnd_toEndOf="@+id/downloadBtn"
            app:layout_constraintStart_toStartOf="@+id/downloadBtn"
            app:layout_constraintTop_toTopOf="@+id/downloadBtn" />

        <Button
            android:id="@+id/downloadBtn"
            style="@style/Theme.Button.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:icon="@drawable/ic_round_arrow_downward_24"
            app:iconTint="@color/blue_500"
            app:layout_constraintBottom_toBottomOf="@+id/otherUserImageMessage"
            app:layout_constraintEnd_toEndOf="@+id/otherUserImageMessage"
            app:layout_constraintStart_toStartOf="@+id/otherUserImageMessage"
            app:layout_constraintTop_toTopOf="@+id/otherUserImageMessage"
            app:layout_constraintVertical_bias="0.45"
            app:strokeColor="@color/blue_500"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/downloadTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Download"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/downloadBtn"
            app:layout_constraintStart_toStartOf="@+id/downloadBtn"
            app:layout_constraintTop_toBottomOf="@+id/downloadBtn" />

        <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Jamid Deka"
            android:textColor="@color/blue_500"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/otherUserImageMessage"
            app:layout_constraintEnd_toEndOf="@+id/otherUserImageMessage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/otherUserImageMessage"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>