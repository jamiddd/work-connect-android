<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/NonPrimaryFragmentStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/userDetailScroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="56dp"
            tools:context=".auth.UserDetailFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/userImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:placeholderImage="@drawable/ic_user"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="What should we call you?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toTopOf="@+id/userFullNameText"
                    app:layout_constraintEnd_toEndOf="@+id/userImg"
                    app:layout_constraintStart_toStartOf="@+id/userImg"
                    app:layout_constraintTop_toBottomOf="@+id/userImg" />

                <EditText
                    android:id="@+id/userFullNameText"
                    style="@style/EditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/grey_rounded_rect_edittext"
                    android:ems="10"
                    android:hint="Enter your name"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addImgBtn"
                    style="@style/Theme.Button.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_baseline_add_24"
                    app:iconSize="36dp"
                    app:layout_constraintBottom_toBottomOf="@+id/userImg"
                    app:layout_constraintEnd_toEndOf="@+id/userImg"
                    app:layout_constraintStart_toStartOf="@+id/userImg"
                    app:layout_constraintTop_toTopOf="@+id/userImg" />


                <ProgressBar
                    android:id="@+id/imageUploadProgress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/userImg"
                    app:layout_constraintEnd_toEndOf="@+id/userImg"
                    app:layout_constraintStart_toStartOf="@+id/userImg"
                    app:layout_constraintTop_toTopOf="@+id/userImg" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>