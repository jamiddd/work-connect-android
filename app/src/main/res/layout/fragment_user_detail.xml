<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        style="@style/NonPrimaryFragmentStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/userDetailScroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:clipToPadding="false"
            tools:context=".auth.UserDetailFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/userImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:placeholderImage="@drawable/ic_user"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="What should we call you?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toTopOf="@+id/userFullNameText"
                    app:layout_constraintEnd_toEndOf="@+id/userImg"
                    app:layout_constraintStart_toStartOf="@+id/userImg"
                    app:layout_constraintTop_toBottomOf="@+id/userImg" />

                <EditText
                    android:id="@+id/userFullNameText"
                    style="@style/EditTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/grey_rounded_rect_edittext"
                    android:ems="10"
                    android:hint="Enter your name"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintBottom_toTopOf="@+id/updateUserBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addImgBtn"
                    style="@style/Theme.Button.IconOnly"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="#39504E4E"
                    android:paddingLeft="22dp"
                    app:cornerRadius="50dp"
                    app:icon="@drawable/ic_round_add_24"
                    app:iconSize="56dp"
                    app:iconTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/userImg"
                    app:layout_constraintEnd_toEndOf="@+id/userImg"
                    app:layout_constraintStart_toStartOf="@+id/userImg"
                    app:layout_constraintTop_toTopOf="@+id/userImg" />


                <ProgressBar
                    android:id="@+id/imageUploadProgress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/userImg"
                    app:layout_constraintEnd_toEndOf="@+id/userImg"
                    app:layout_constraintStart_toStartOf="@+id/userImg"
                    app:layout_constraintTop_toTopOf="@+id/userImg" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="48dp"
                    android:gravity="center"
                    android:text="@string/user_detail_header"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_constraintBottom_toTopOf="@+id/userImg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/updateUserBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:enabled="false"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Next"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    app:cornerRadius="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/userFullNameText"
                    app:layout_constraintStart_toStartOf="@+id/userFullNameText"
                    app:layout_constraintTop_toBottomOf="@+id/userFullNameText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/userDetailToolbar"
                android:layout_width="match_parent"
                app:titleCentered="true"
                app:navigationIcon="@drawable/ic_round_arrow_back_24"
                app:title="Add Detail"
                android:layout_height="?actionBarSize"/>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>